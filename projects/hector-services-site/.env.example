# Site URL for canonicals, sitemap and metadata
NEXT_PUBLIC_SITE_URL=https://tu-dominio.com

# Search Console verification token (optional, recommended)
GOOGLE_SITE_VERIFICATION=tu-token-verification

# Analytics (usa GTM o GA4 directo)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Public booking URL (Cal.com or similar)
NEXT_PUBLIC_CAL_LINK=https://cal.com/tu-usuario/diagnostico

# Contact form delivery (Webhook + Resend fallback)
# Webhook recomendado (n8n/CRM). Si falla, usa backup si existe.
LEAD_WEBHOOK_URL=https://tu-webhook-principal.com/lead
LEAD_WEBHOOK_BACKUP_URL=https://tu-webhook-backup.com/lead
LEAD_WEBHOOK_BEARER_TOKEN=token-opcional

# Email fallback (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxx
CONTACT_TO_EMAIL=tu-email@dominio.com
CONTACT_FROM_EMAIL=Leads <onboarding@resend.dev>

# Direct automation queue (sin n8n) usando Vercel KV + Cron
LEAD_RETRY_QUEUE_ENABLED=true
KV_REST_API_URL=https://tu-kv.upstash.io
KV_REST_API_TOKEN=tu-token-kv
KV_REST_API_READ_ONLY_TOKEN=tu-token-kv-readonly
CRON_SECRET=tu-secreto-cron
LEAD_RETRY_MAX_ATTEMPTS=6
LEAD_RETRY_BASE_DELAY_MS=60000
LEAD_RETRY_MAX_DELAY_MS=1800000
LEAD_RETRY_BATCH_SIZE=20

# Newsletter delivery (comma-separated emails)
NEWSLETTER_SITE_URL=https://www.pachanodesign.com
